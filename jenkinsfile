pipeline {
  agent { label 'jenkins-agent' }
  tools {
      jdk 'Java21'
      maven 'Maven4'
  }
  stages{
      stage("Cleanup Workspace"){
                steps {
                cleanWs()
                }
    }
      stage("Checkout from SCM"){
              steps {
              git branch: 'main', credentialsId: 'jenkins', url:'https://github.com/zyynzyy/register-app'
              }
      }
      stage("Build Application"){
              steps {
              sh "mvn clean package"
              }
        }
      stage("Test Application"){
              steps {
              sh "mvn test"
              }
      }
  }
}
